@{
    ViewData["Title"] = "Login";
}
<body class="bodyLogin">
    <div class="quadroLogin">
        <h1 class="logo">Mr.Coconut</h1>
        <form asp-action="Login" method="post">
            <div class="campoInput">
                <legend>Email</legend>
                <input type="email" name="email" minlength="10" placeholder="ex: abcdef@gmail.com" title="Digite seu email (ex: abcdef@gmail.com)" value=""
                       autocomplete="" required>
            </div>
            <div class="campoInput">
                <legend>Senha</legend>
                <input type="password" name="password" minlength="8" placeholder="Utilize caracteres especiais (ex: @@,#)" pattern="(@@,,# {1,2,3,4,5,6,7,8,9,0})"
                       title="Utilize caracteres especiais (ex: @@,#)" required>
            </div>
            @{
                if (ViewData["Message"] != null)
                {
                    <p class="text-danger">@ViewData["Message"]</p>
                }
            }
            <button class="botaoConfirmar" type="submit">Login</button>
        </form>
        <!-- <p>Esqueceu a senha? <a href="#">Clique aqui</a></p> -->
        <br>
        <p>Não tem cadastro? <a asp-controller="Register" asp-action="Index">Crie aqui</a></p>
    </div>
</body>
